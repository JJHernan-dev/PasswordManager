<Window
    x:Class="PasswordManager.ConfirmDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ConfirmDialog"
    Width="350"
    Height="180"
    AllowsTransparency="True"
    Background="#1e1e1e"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Padding="20"
        Background="#2b2b2b"
        BorderBrush="#3C3C3C"
        BorderThickness="1"
        CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  TÍTULO  -->
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Foreground="White"
                Text="Confirmar eliminación" />
            <!--  MENSAJE  -->
            <TextBlock
                x:Name="MessageText"
                Grid.Row="1"
                Margin="0,15,0,15"
                FontSize="14"
                Foreground="LightGray"
                TextWrapping="Wrap" />
            <!--  BOTONES  -->
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="90"
                    Margin="0,0,10,0"
                    Padding="5"
                    Background="#3C3C3C"
                    Click="Cancel_Click"
                    Content="Cancelar"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Padding="10"
                                Background="#007ACC"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!--  Hover  -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3399FF" />
                                </Trigger>
                                <!--  Click presionado  -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#005A9E" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button
                    Width="90"
                    Padding="5"
                    Background="#C23B22"
                    Click="Confirm_Click"
                    Content="Eliminar"
                    Foreground="White">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Padding="10"
                                Background="#C62828"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <!--  Hover  -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E53935" />
                                </Trigger>
                                <!--  Click presionado  -->
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#8E0000" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</Window>
