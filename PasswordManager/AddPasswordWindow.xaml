<Window
    x:Class="PasswordManager.AddPasswordWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddPasswordWindow"
    Width="400"
    Height="370"
    Background="#1E1E1E"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border
        Margin="10"
        BorderBrush="White"
        BorderThickness="4"
        CornerRadius="2">

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel>
                <Label
                    HorizontalAlignment="Center"
                    Content="AÑADIR NUEVA CONTRASEÑA"
                    Foreground="White" />
                <TextBlock Foreground="White" Text="Sitio:" />
                <TextBox
                    x:Name="txtSite"
                    Height="27"
                    Margin="0,0,0,10"
                    Padding="5" />

                <TextBlock Foreground="White" Text="Usuario:" />
                <TextBox
                    x:Name="txtUsername"
                    Height="27"
                    Margin="0,0,0,10"
                    Padding="5" />

                <TextBlock Foreground="White" Text="Contraseña:" />
                <Grid Grid.Row="0">
                    <PasswordBox
                        x:Name="txtPassword"
                        Height="27"
                        Margin="0,4,51,15"
                        Padding="5" />
                    <Button
                        Width="34"
                        Height="34"
                        Margin="298,0,0,12"
                        Click="GeneratePassword_Click"
                        ToolTip="Generar contraseña aleatoria">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="border"
                                    Padding="5"
                                    Background="#00BFA5"
                                    CornerRadius="5">

                                    <!--  Aquí va el icono  -->
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Text="🔄" />
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#1DE9B6" />
                                    </Trigger>

                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#008E76" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </StackPanel>

            <Button
                Grid.Row="3"
                Margin="0,21,0,-55"
                Click="Save_Click"
                Content="GUARDAR"
                FontWeight="Bold"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="10"
                            Background="#007ACC"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--  Hover  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3399FF" />
                            </Trigger>
                            <!--  Click presionado  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                x:Name="btnCerrar"
                Grid.Row="3"
                Margin="0,75,0,-109"
                Click="Close_Click"
                Content="CERRAR"
                FontWeight="Bold"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Padding="10"
                            Background="#C62828"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!--  Hover  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E53935" />
                            </Trigger>
                            <!--  Click presionado  -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#8E0000" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>
