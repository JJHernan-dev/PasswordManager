<!--
    Ventana de inicio de sesión.
    Utiliza un diseño minimalista sin barra de título de Windows
    (WindowStyle=None) y permite arrastrar la ventana manualmente.
-->
<Window
    x:Class="PasswordManager.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Login"
    Width="350"
    Height="230"
    Background="Transparent"
    MouseDown="DragWindow"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">


    <!--  Contenedor general con borde y tema oscuro  -->
    <Border
        Padding="20"
        Background="#1E1E1E"
        BorderBrush="#3C3C3C"
        BorderThickness="1">

        <Grid Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Título pequeño centrado arriba  -->
            <Label
                Margin="154,-13,44,15"
                Content="PasswordManager"
                Foreground="White" />

            <!--  Icono + título principal  -->
            <StackPanel
                Grid.ColumnSpan="2"
                Margin="74,0,0,15"
                Orientation="Horizontal">

                <TextBlock
                    Margin="0,0,8,0"
                    FontSize="26"
                    Foreground="White"
                    Text="🔒" />
                <TextBlock
                    x:Name="TitleText"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Iniciar sesión" />
            </StackPanel>

            <!--  Campo contraseña  -->
            <PasswordBox
                x:Name="txtPassword"
                Grid.Row="1"
                Width="250"
                Margin="0,23,0,8"
                Padding="8"
                HorizontalAlignment="Center"
                Background="#2D2D30"
                BorderBrush="#3C3C3C"
                BorderThickness="1"
                FontSize="16"
                Foreground="White"
                PasswordChar="●" />

            <!--  Botón de inicio de sesión  -->
            <Button
                x:Name="btnLogin"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Width="120"
                Height="36"
                Margin="94,15,94,0"
                Background="#0E639C"
                Click="BtnLogin_Click"
                Content="Entrar"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">

                <!--  Estilo del botón (hover y pressed)  -->
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="bd"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#1177BB" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#094771" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Border>

</Window>
